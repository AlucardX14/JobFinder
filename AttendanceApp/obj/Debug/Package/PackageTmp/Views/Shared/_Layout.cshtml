@using Newtonsoft.Json;
@using AttendanceApp.Models;

@{

    Employee userinfo = JsonConvert.DeserializeObject<Employee>(User.Identity.Name);


}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Attendance Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("JobFinder", "Index", "Post", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        if (userinfo != null)
                        {
                            if (userinfo.UserRoles == "Admin")
                            {

                                <li>@Html.ActionLink("Manage Posts", "Management", "Post")</li>
                                <li>@Html.ActionLink("Manage Users", "Index", "Employees")</li>
                                <li>@Html.ActionLink("Manage Categories", "Index", "Categories")</li>
                                <li>@Html.ActionLink("Global Settings", "Index", "GlobalParams")</li>
                            }
                            else
                            {

                            }

                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar-fixed-bottom panel-footer">
            <p>Programación 3 - 2020 C-1 | 2017-5739</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
